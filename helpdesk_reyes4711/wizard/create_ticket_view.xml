<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="create_ticket_view_form" model="ir.ui.view">
        <field name="name">create.ticket.view.form</field>
        <field name="model">create.ticket</field>
        <field name="arch" type="xml">
            <form string="">
                <group>
                    <field name="name"/>
                </group>
                <footer>
                    <button name="create_ticket" type="object" string="Accept"/>
                    <button special="cancel" class="btn-secondary" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="create_ticket_action" model="ir.actions.act_window">
        <field name="name">create.ticket.action</field>
        <field name="res_model">create.ticket</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>