<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="helpdesk_ticket_tag_form_view" model="ir.ui.view">
        <field name="name">helpdesk.ticket.tag.form.view</field>
        <field name="model">helpdesk.ticket.tag</field>
        <field eval="10" name="priority"/>
        <field name="arch" type="xml">
            <form string="Tag">
                <sheet>
                    <group name="main">
                        <field name="name"/>
                    </group>
                    <group>
                        <button string="Create Ticket"
                            name="%(helpdesk_reyes4711.create_ticket_action)d"
                            type="action"/>
                    </group>
                    <field name="tag_ids"/>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="helpdesk_ticket_tag_simple_form_view" model="ir.ui.view">
        <field name="name">helpdesk.ticket.tag.simple.form.view</field>
        <field name="model">helpdesk.ticket.tag</field>
        <field eval="1" name="priority"/>
        <field name="arch" type="xml">
            <form string="Tag">
                <group name="main">
                    <field name="name"/>
                </group>
            </form>
        </field>
    </record>
    <record id="helpdesk_ticket_tag_view_tree" model="ir.ui.view">
        <field name="name">helpdesk.ticket.tag.view.tree</field>
        <field name="model">helpdesk.ticket.tag</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="helpdesk_ticket_tag_action" model="ir.actions.act_window">
        <field name="name">helpdesk.ticket.tag.action</field>
        <field name="res_model">helpdesk.ticket.tag</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5,0,0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('helpdesk_ticket_tag_view_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('helpdesk_ticket_tag_form_view')})]"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new "label"
            </p>
        </field>
    </record>
    <record id="action_new_tag" model="ir.actions.act_window">
        <field name="name">new.tag</field>
        <field name="res_model">helpdesk.ticket.tag</field>
        <field name="view_ids" eval="[(5,0,0),
            (0, 0, {'view_mode': 'form', 'view_id': ref('helpdesk_ticket_tag_form_view')})]"/>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <menuitem id="helpdesk_ticket_tag_menu" name="Tags" parent="helpdesk_menu_submenu" sequence="40" action="helpdesk_ticket_tag_action"/>
</odoo>